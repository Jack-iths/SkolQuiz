<Window x:Class="SkolQuiz.QuizView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolQuiz"
        mc:Ignorable="d"
        Title="Quiz" Height="550" Width="700" Loaded="Window_Loaded" Background="#FF2C3E50" FontFamily="Segoe UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1">
            <TextBlock x:Name="ScoreText" FontWeight="Bold" FontSize="16" Foreground="#FF3498DB"/>
        </StackPanel>
        <TextBlock x:Name="CounterQuestionText" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="1" FontWeight="Bold" FontSize="16" TextAlignment="Right" Foreground="#FF95A5A6"/>

        <Border Grid.Column="1" Grid.ColumnSpan="6" Grid.Row="3" Background="#FF34495E" CornerRadius="5" Padding="20">
            <TextBlock x:Name="CurrentQuestionText" Text="{Binding CurrentQuestion.Statement}" TextAlignment="Center" FontSize="18" FontWeight="Bold" Foreground="#FFECF0F1" TextWrapping="Wrap"/>
        </Border>

        <Button x:Name="AnswerA" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="5" Content ="{Binding CurrentQuestion.Answers[0]}" Tag="0" Click="AnswerButton_Click" FontSize="14" FontWeight="Bold" Height="60" Background="#FF3498DB" Foreground="White" BorderThickness="0"/>
        <Button x:Name="AnswerB" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="5" Content="{Binding CurrentQuestion.Answers[1]}" Tag="1" Click="AnswerButton_Click" FontSize="14" FontWeight="Bold" Height="60" Background="#FF9B59B6" Foreground="White" BorderThickness="0"/>
        <Button x:Name="AnswerC" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="7" Content="{Binding CurrentQuestion.Answers[2]}" Tag="2" Click="AnswerButton_Click" FontSize="14" FontWeight="Bold" Height="60" Background="#FFE74C3C" Foreground="White" BorderThickness="0"/>
        <Button x:Name="AnswerD" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="7" Content="{Binding CurrentQuestion.Answers[3]}" Tag="3" Click="AnswerButton_Click" FontSize="14" FontWeight="Bold" Height="60" Background="#FF2ECC71" Foreground="White" BorderThickness="0"/>

        <Button x:Name="GoBackToCategoryButton" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3" Content="Tillbaka" FontSize="12" FontWeight="Bold" Height="40" Background="#FF95A5A6" Foreground="White" Click="GoBackToCategoryButton_Click" BorderThickness="0"/>
        <Button x:Name="NextQuestionButton" Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="9" Content="Hoppa över" Click="NextQuestionButton_Click" FontSize="12" FontWeight="Bold" Height="40" Background="#FFF39C12" Foreground="White" BorderThickness="0"/>
    </Grid>

</Window>
