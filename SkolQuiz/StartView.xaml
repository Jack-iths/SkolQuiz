<Window x:Class="SkolQuiz.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolQuiz"
        mc:Ignorable="d"
        Title="Startvy" Height="400" Width="500" Background="#FF2C3E50" FontFamily="Segoe UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Är du redo?" Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="1" TextAlignment="Center" FontSize="28" FontWeight="Bold" Foreground="#FFECF0F1"/>
        <TextBlock Text="KLICKA START NÄR DU ÄR REDO" Grid.Column="2" Grid.ColumnSpan="4" Grid.Row="2" TextAlignment="Center" FontSize="16" Foreground="#FF95A5A6" Margin="0,10,0,0"/>
        <Button x:Name="StartButton" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="4" Content="STARTA" Background="#FF27AE60" Foreground="White" FontSize="20" FontWeight="Bold" Height="60" Click="StartButton_Click" BorderThickness="0"/>
    </Grid>
</Window>