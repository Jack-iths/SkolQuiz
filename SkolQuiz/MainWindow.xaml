<Window x:Class="SkolQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolQuiz"
        mc:Ignorable="d"
        Title="Quiz Spel" Height="500" Width="600" Background="#FF34495E" FontFamily="Segoe UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Text="QUIZ SPEL" Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="1" FontSize="42" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#FFECF0F1"/>
        <TextBlock Text="VÄLKOMMEN!" Grid.Column="2" Grid.ColumnSpan="5" Grid.Row="2" FontSize="24" HorizontalAlignment="Center" Foreground="#FF3498DB" Margin="0,10,0,0"/>
        <Button x:Name="ToSeeCategory" Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="4" Content="Börja Spela" FontWeight="Bold" FontSize="20" Height="60" Background="#FF27AE60" Foreground="White" Click="ToSeeCategory_Click" BorderThickness="0"/>
    </Grid>
</Window>