<UserControl x:Class="SkolQuiz.CreateQuizView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkolQuiz"
        mc:Ignorable="d"
        Background="#FF2C3E50" FontFamily="Segoe UI">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="SKAPA NYTT QUIZ" Grid.Row="0" FontSize="28" FontWeight="Bold" Foreground="#FFECF0F1" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Quiz Namn:" Grid.Row="1" Foreground="#FFECF0F1" FontSize="16" Margin="0,5"/>
            <TextBox x:Name="QuizTitleTextBox" Grid.Row="2" Height="35" FontSize="16" Margin="0,5" Padding="5"/>

            <TextBlock Text="Fråga:" Grid.Row="3" Foreground="#FFECF0F1" FontSize="16" Margin="0,10,0,5"/>
            <TextBox x:Name="QuestionTextBox" Grid.Row="4" Height="35" FontSize="16" Margin="0,5" Padding="5"/>

            <TextBlock Text="Svarsalternativ:" Grid.Row="5" Foreground="#FFECF0F1" FontSize="16" Margin="0,10,0,5"/>
            <TextBox x:Name="Answer1TextBox" Grid.Row="6" Height="30" FontSize="14" Margin="0,3" Padding="5" Text="Alternativ 1"/>
            <TextBox x:Name="Answer2TextBox" Grid.Row="7" Height="30" FontSize="14" Margin="0,3" Padding="5" Text="Alternativ 2"/>
            <TextBox x:Name="Answer3TextBox" Grid.Row="8" Height="30" FontSize="14" Margin="0,3" Padding="5" Text="Alternativ 3"/>

            <StackPanel Grid.Row="9" Margin="0,15,0,0">
                <TextBlock Text="Vilket är rätt svar? (1-3):" Foreground="#FFECF0F1" FontSize="16" Margin="0,0,0,5"/>
                <ComboBox x:Name="CorrectAnswerComboBox" Height="35" FontSize="16" Margin="0,0,0,10">
                    <ComboBoxItem Content="1" IsSelected="True"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                </ComboBox>

                <TextBlock Text="Kategori:" Foreground="#FFECF0F1" FontSize="16" Margin="0,5,0,5"/>
                <TextBox x:Name="CategoryTextBox" Height="35" FontSize="16" Padding="5" Text="Allmänt" TextChanged="CategoryTextBox_TextChanged" Margin="0,0,0,15"/>
                
                <TextBlock Text="Bild (valfritt):" Foreground="#FFECF0F1" FontSize="16" Margin="0,0,0,5"/>
                <Button x:Name="SelectImageButton" Content="Välj Bild" Width="150" Height="35" Background="#FF9B59B6" Foreground="White" FontWeight="Bold" Click="SelectImageButton_Click" HorizontalAlignment="Left" Margin="0,5"/>
                <Image x:Name="PreviewImage" MaxHeight="150" Margin="0,10,0,0" Stretch="Uniform" Visibility="Collapsed"/>
                <TextBlock x:Name="ImagePathText" Foreground="#FF95A5A6" FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
            </StackPanel>

            <StackPanel Grid.Row="10" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="AddQuestionButton" Content="Lägg till Fråga" Width="180" Height="50" Background="#FF27AE60" Foreground="White" FontWeight="Bold" FontSize="16" Click="AddQuestionButton_Click" BorderThickness="0" Margin="5"/>
                <Button x:Name="SaveQuizButton" Content="Spara Quiz" Width="180" Height="50" Background="#FF3498DB" Foreground="White" FontWeight="Bold" FontSize="16" Click="SaveQuizButton_Click" BorderThickness="0" Margin="5"/>
                <Button x:Name="BackButton" Content="Tillbaka" Width="150" Height="50" Background="#FF95A5A6" Foreground="White" FontWeight="Bold" FontSize="16" Click="BackButton_Click" BorderThickness="0" Margin="5"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
